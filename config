#! /bin/sh

export WB_ROOT=`pwd`

# Setup this file
# so as to fit your environment.

BACKING=/dev/vg2/back18g
# BACKING=/dev/vdd
# BACKING=/dev/vdd1
# BACKING=/dev/vg2/back40g
# BACKING=/dev/sdc2
# BACKING=/dev/sda2
export BACKING

CACHE=/dev/vg1/cache3m
# CACHE=/dev/vg1/cache2g
# CACHE=/dev/vdd2
# CACHE=/dev/sdd2
# CACHE=/dev/loop0
# CACHE=/dev/sda1
export CACHE

# PLOG=/dev/vg1/cache2g
# PLOG=/dev/vg1/cache3m
PLOG=/dev/vdd2
export PLOG

echo BACKING: ${BACKING}
echo CACHE  : ${CACHE}
echo PLOG   : ${PLOG}
